@model IEnumerable<DtoPatent>
@{
    ViewData["Title"] = "Lista as Patentes Encontradas";
    Layout = "~/Views/Shared/_patentLayout.cshtml";
}

<a asp-action="GetPatent" class="btn btn-sm btn-secondary">Obter Patente Por Id</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Claims</th>
            <th>Patent Date</th>
            <th>Atualiza</th>
            <th>Deleta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.PatentId</td>
                <td>@p.PatentTitle</td>
                <td>@p.PatentClaims</td>
                <td>@p.PatentDate</td>
                <td>
                    <a asp-action="UpdatePatent" asp-route-id="@p.PatentId"><img src="/icon/edit.png" /></a>
                </td>
                <td>
                    <form asp-action="DeletePatent" method="post">
                        <input type="hidden" value="@p.PatentId" name="DtoPatentId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

